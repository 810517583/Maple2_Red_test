{
  "AllowedHosts": "*",
  "Kestrel": {
    "EndpointDefaults": {
      "Protocols": "Http2"
    },
    "EndPoints": {
      "Https": {
        "Url": "https://*:5001"
      },
      "Http": {
        "Url": "http://*:5000"
      }
    }
  },
  "NLog": {
    "autoReload": true,
    "throwConfigExceptions": true,
    "internalLogFile": "${basedir}/maple-server-internal.log",
    "internalLogLevel": "Info",
    "targets": {
      "file": {
        "type": "File",
        "fileName": "c:/temp/maple-server.log",
        "layout": "${date} ${threadid} [${level:uppercase=true}] ${logger}: ${message} ${exception:format=ToString,StackTrace}|${all-event-properties}"
      },
      "console": {
        "type": "ColoredConsole",
        "layout": "[${level:uppercase=true}] ${logger}: ${message} ${exception:format=ToString,StackTrace}",
        "rowHighlightingRules": [
          {
            "condition": "level == LogLevel.Fatal",
            "foregroundColor": "DarkRed"
          },
          {
            "condition": "level == LogLevel.Error",
            "foregroundColor": "Red"
          },
          {
            "condition": "level == LogLevel.Warn",
            "foregroundColor": "DarkYellow"
          },
          {
            "condition": "level == LogLevel.Trace",
            "foregroundColor": "DarkGray"
          }
        ]
      }
    },
    "rules": [
      {
        "logger": "Microsoft.*",
        "maxLevel": "Warn",
        "final": true
      },
      {
        "logger": "Grpc.*",
        "maxLevel": "Warn",
        "final": true
      },
      {
        "logger": "Maple2.*",
        "minLevel": "Debug",
        "writeTo": "file,console",
        "final": true
      },
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "file,console"
      }
    ]
  }
}
